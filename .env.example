# Production Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://postgres:your_secure_password@db:5432/personal_finance
POSTGRES_DB=personal_finance
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password

# JWT Configuration
JWT_SECRET_KEY=your-very-secure-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour in seconds
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 days in seconds

# CORS Configuration
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# API Configuration
VITE_API_URL=https://api.your-domain.com

# Port Configuration
# Host ports (exposed to host machine)
BACKEND_PORT=5000
FRONTEND_PORT=80
FRONTEND_HTTPS_PORT=443
DB_PORT=5432
REDIS_PORT=6379

# Container ports (internal container ports)
BACKEND_CONTAINER_PORT=5000
FRONTEND_CONTAINER_PORT=80

# Redis Configuration
REDIS_PASSWORD=your_redis_password

# Flask Configuration
FLASK_ENV=production

# Optional: Email Configuration (for future features)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-app-password

# Optional: Monitoring/Logging
# SENTRY_DSN=your-sentry-dsn
# LOG_LEVEL=INFO